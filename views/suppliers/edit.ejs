<%- include('../partials/header') %>
    <h2>Edit Supplier</h2>
    <form action="/suppliers/update/<%= supplier._id %>" method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input name="name" required class="form-control" value="<%= supplier.name %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label>
            <input name="address" class="form-control" value="<%= supplier.address %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input name="phone" class="form-control" value="<%= supplier.phone %>">
        </div>
        <button class="btn btn-primary">Save</button>
    </form>
    <%- include('../partials/footer') %>